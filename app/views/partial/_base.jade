      meta(name="msapplication-TileImage", content="#{mediaPath}/favicons/mstile-144x144.png")
      meta(name="theme-color", content="#41cca5")
  body
    .is-loading.u-wrapper(id="main-wrapper")
      block main
    block scripts
      include _scripts

